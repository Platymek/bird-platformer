pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
#include src/math.lua
#include src/config.lua
#include src/pecs.lua
#include src/world.lua
#include src/generic.lua
#include src/player.lua
#include src/mapManager.lua

function _init()
    
 dt = 1/60
 
 player = createPlayerEntity(world, 16, 16)

 mm = makeMapManager()
 mm.addMap("test room 1/1", 0, 0, 0, 0)
 mm.addMap("test room 1/2", 1, 0, 0, 1)
 mm.addMap("test room 2/1", 0, 1, 0, 2)
 mm.addMap("test room 2/2", 1, 1, 0, 3)

 function isSolid(x, y, falling)

  result = mm.hasFlag(0, x / 8, y / 8)

  -- hacky way of including platforms
  if falling == true 
  and (flr(y) % 8 == 0 or flr(y) % 8 == 1 or flr(y) % 8 == 2) 
  then
   return result or mm.hasFlag(1, x / 8, y / 8)
  end
  
  return mm.hasFlag(0, x / 8, y / 8)
 end
end

function _update60()

 PlayerSystem(dt)
 VelocitySystem(dt, isSolid)
 GravitySystem(dt)

 local pos = player[Position]
 camera(pos.x - 64, pos.y - 64)
end

function _draw()
    
 cls()
 SpriteSystem()
 mm.draw()

 local pos = player[Position]
 pset(pos.x,  pos.y, 8)
end

