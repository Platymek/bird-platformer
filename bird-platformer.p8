__lua__
#include src/math.lua
#include src/config.lua
#include src/pecs.lua
#include src/world.lua
#include src/generic.lua

#include src/entities/player.lua
#include src/entities/spike.lua
#include src/entities/breakWall.lua

#include src/mapManager.lua
#include src/cameras.lua

--[[ teams:

- nil = no team
- 0 = player
- 1 = enemy
]]

function _init()
    
 dt = 1/60
 
 player = createPlayerEntity(world, 8 * 8, 12 * 8)
 ra = createRisingAnchorEntity(world, player, 64, 64)

 createSpikeEntity(world, 32, 32)
 createSpikeEntity(world, 32, 40)
 createSpikeEntity(world, 32, 48)
 createBreakWallEntity(world, 16, 16, 4)

 mm = makeMapManager()
 mm.addMap("test room 1/1", 0,  0, 0, 0)
 mm.addMap("test room 1/2", 0, -1, 0, 1)
 mm.addMap("test room 2/1", 0, -2, 0, 2)
 mm.addMap("test room 2/2", 0, -3, 0, 3)

 function isSolid(x, y, ent, falling)

  result = mm.hasFlag(0, flr(x / 8), (y / 8))
  or isPointInCollision(world, x, y, ent)

  -- hacky way of including platforms
  if falling == true 
  and (flr(y) % 8 == 0 or flr(y) % 8 == 1 or flr(y) % 8 == 2) 
  then
   return result or mm.hasFlag(1, flr(x / 8), (y / 8))
  end
  
  return result
 end
end

function _update60()

 PlayerSystem(dt)
 VelocitySystem(dt, isSolid)
 GravitySystem(dt)
 RisingAnchorSystem()
 CameraSystem()
 HurtboxSystem()
 DeleteSystem()
end

function _draw()
    
 cls()
 mm.draw()
 SpriteGroupSystem()
 SpriteSystem()

 -- debug
 if config.debug.drawColl then DrawCollision(6) end
 if config.debug.drawHurt then DrawHitboxes (8) end
 if config.debug.drawHit  then DrawHurtboxes(11) end
end

